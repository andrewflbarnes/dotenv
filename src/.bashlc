#!/usr/bin/env bash

[ -r "$HOME/.dotfiles-init.sh" ] && . "$HOME/.dotfiles-init.sh"

if [ -d ~/.bashlc.d ]
then
  #echo "Loading login scripts..."
  echo
  for i in ~/.bashlc.d/*
  do
    loadfile="$(basename "$i")"
    [ -r $i ] && [[ "$loadfile" =~ ^[0-9] ]] && {
      printf "\033[1A\033[K"
      printf "Loading %-35s" "$loadfile..."
      if dotfiles_skip ".bashlc.d/$loadfile"
      then
        printf "\033[1;33mSkipped\033[0m.\n"
      else
        . $i
        printf "\033[1;32mDone\033[0m.\n"
      fi
    }
  done
  printf "\033[1A\033[K"
fi

dotfiles_skipped
