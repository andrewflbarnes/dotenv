#!/usr/bin/env bash

function gitsh {
    local command=$1
    shift 1

    case $command in
        andrewflbarnes)
            local repo=$1
            shift 1
            local slug="$command/$repo"
            gitsh_repo_clone github.com "$slug" $@
            ;;
        github)
            gitsh_repo_clone github.com $@
            ;;
        *)
            echo Unrecognised alias $command
            ;;
    esac
}

function gitsh_repo_clone {
    local host=$1
    local slug=$2
    shift 2
    local out="$HOME/development/repo/$host/$slug"

    git clone "git@${host}:${slug}" "$out" $@
}

gitsh $@
